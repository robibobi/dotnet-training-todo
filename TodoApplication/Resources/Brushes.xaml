<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <SolidColorBrush x:Key="ButtonMainBrush"
                     Color="#FFA000" />
    <SolidColorBrush x:Key="ButtonMouseOverBrush"
                     Color="#FFD740" />
    <SolidColorBrush x:Key="ButtonPressedBrush"
                     Color="#FFD54F" />
    <SolidColorBrush x:Key="ButtonDisabledBrush"
                     Color="#908F93" />

    <SolidColorBrush x:Key="TodoListBackground"
                     Color="#ffddb0" />
    
    
    <!-- Tag Colors -->
    <SolidColorBrush x:Key="TagColorDefault"
                     Color="Gray" />
    <SolidColorBrush x:Key="TagColor1"
                     Color="#e54304" />
    <SolidColorBrush x:Key="TagColor2"
                     Color="#fa8100" />
    <SolidColorBrush x:Key="TagColor3"
                     Color="#ffaf49" />
